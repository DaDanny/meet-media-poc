{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "lib": ["ES2022", "DOM"],
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types", "./backend/types"]
  },
  "include": [
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "web",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
